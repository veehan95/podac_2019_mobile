Container
  template(slot="header")
    div
      h1 Claim History
  template(slot="body")
    .fullScreen(v-if="loading")
      p loading ...
    .fullScreen(v-else)
      ul
        li.clickable(v-for="(reward, i) in rewards" :key="`reward_${i}`")
          button.page_section(@click="goto(i)" style="width: 100%")
            img(:src="reward.image_url" style="max-width: 80px;height:80px;border-radius: 50%")
            .xxx
              div
                p.title {{ reward.name }}
                p {{ reward.details }}
                p {{ reward.date }}
            div
              img(src="@/assets/icon/get.png" style="max-width: 60px;height:60px;padding: 10px")
